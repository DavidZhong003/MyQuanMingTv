<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/fl_headPng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/thumnails"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:src="@drawable/ic_default_cover"
                android:adjustViewBounds="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tv_viewnum"
                android:textSize="10.0sp"

                android:textColor="@color/white_80"
                android:background="@drawable/corner_live_num_bg"
                android:paddingLeft="5.0dip"
                android:paddingTop="1.0dip"
                android:paddingRight="5.0dip"
                android:paddingBottom="1.0dip"
                android:layout_margin="5.0dip"
                android:text="1.1万"
                android:drawableLeft="@drawable/ic_player_content_number"
                android:drawablePadding="2.0dip"
                android:layout_alignBottom="@id/thumnails"
                android:layout_height="wrap_content"
                android:minWidth="30dp"
                android:layout_width="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/infoContainer"
            android:layout_below="@+id/fl_headPng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="6dp"
                android:src="@drawable/ic_default_head"/>
            <RelativeLayout
                android:layout_toRightOf="@id/ic_head"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nickName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/black_70"
                    android:text="国服第一打野成成天慢各种坑"/>
                <TextView
                    android:id="@+id/title"
                    android:layout_below="@id/nickName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_40"
                    android:textSize="10sp"
                    android:text="肌肉飒飒撒"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>